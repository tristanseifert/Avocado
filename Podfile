# platform :ios, '8.0'
# Uncomment this line if you're using Swift
use_frameworks!

target 'Avocado' do
    # Persistence and Logging
    pod 'CocoaLumberjack', '~> 2.2'
    pod 'MagicalRecord', '~> 2.3'

    # UI: Status bars at bottom of window
    pod 'GRStatusBar'

    # Networking
    pod 'AFNetworking', '~> 3.0'
end

